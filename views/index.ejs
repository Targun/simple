    <script type="text/javascript">
      function pageData() {
        return {
          header: "SIMPLE PROJECT",
          name: "",
          sendRequest() {
            console.log(this.name);
            fetch("/api/simpleRequest", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                name: this.name,
              }),
            })
              .then((res) => res.json())
              .then((d) => {
                alert(d.message);
              });
          },
        };
      }
    </script>
  </body>
</html>
